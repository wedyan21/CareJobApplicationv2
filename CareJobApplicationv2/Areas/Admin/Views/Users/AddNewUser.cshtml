@model AddUserViewModel

@{
    ViewData["Title"] = "Add New User";
}

<h4>@ViewData["Title"]</h4>

<form id="registerForm" asp-action="AddNewUser" method="post">
    <div class="row">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-12 mb-4">
            <div class="form-outline">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />

                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12 mb-4">
            <div class="form-outline">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />

                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12 mb-4">
            <div class="form-outline">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />

                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <!--<div class="col-md-12 mb-4">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="IsCareTeam" name="IsCareTeam" for="IsCareTeam" value="true">
            <label class="form-check-label" asp-for="IsCareTeam">
                Is System management Team?
            </label>
        </div>
    </div>-->
        <div class="col-md-12 mb-4">
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model.IsCareTeam" />
                <input asp-for="@Model.IsCareTeam.Value" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.IsCareTeam.Value ">
                    Is System management Team?
                </label>
            </div>
        </div>


        <div class="col-md-12 mb-4">

            <h6 class="card-title text-uppercase text-primary"><label asp-for="BranchId" class="control-label"></label></h6>

            <select asp-for="BranchId" class="form-select-lg " asp-items="ViewBag.BranchsId"><option value="">Choose a Branch</option></select>
            <span asp-validation-for="BranchId" class="text-danger"></span>


        </div>

        <hr />
        <div class="col-md-12 mb-4">
            <h6>Roles</h6>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Roles[i].IsSelected ">
                        @Model.Roles[i].RoleName
                    </label>
                </div>
            }
            <span asp-validation-for="Roles" class="text-danger"></span>
        </div>
        <button id="AddNewUser" type="submit" class="btn btn-primary btn-block mb-4">Save</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
