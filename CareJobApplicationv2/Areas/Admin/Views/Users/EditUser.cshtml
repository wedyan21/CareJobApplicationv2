                    <div class="col-md-12 mb-4">
                        <div class="form-check">
                            @{
                                bool check = Convert.ToBoolean(Model.IsCareTeam);
                                if (check)
                                {


                                    <input class="form-check-input" type="checkbox" checked="checked" id="IsCareTeam" name="IsCareTeam">
                                }
                                else
                                {
                                    <input class="form-check-input" type="checkbox"  id="IsCareTeam" name="IsCareTeam">
                                }
                            }

                            <label class="form-check-label" asp-for="IsCareTeam">
                                Is System management Team?

                            </label>
                        </div>
                    </div>
                *@
                <div class="col-md-12 mb-4">

                    <h6 class="card-title text-uppercase text-primary"><label asp-for="BranchId" class="control-label"></label></h6>

                    <select asp-for="BranchId" class="form-select-lg " asp-items="ViewBag.BranchsId"><option value="">Choose a Branch</option></select>
                    <span asp-validation-for="BranchId" class="text-danger"></span>


                </div>



            </div>

        </div>
        <div class="card-footer">
            <button id="AddNewUser" type="submit" class="btn btn-primary">Save</button>
            
            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-secondary ">Cancel</a>
        </div>
    </div>
</form>

