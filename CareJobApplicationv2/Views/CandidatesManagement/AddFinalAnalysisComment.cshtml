@model CareJobApplicationv2.ViewModels.FinalAnalysisComments

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
  <head>
     <meta name="viewport" content="width=device-width" />
     <title>Edit Applicant Education</title>
 </head>
  <body>

      <div class="row">
          <div class="col-md-12">
              <form asp-action="AddFinalAnalysisComment" method="post" onsubmit="return SubmitForm(this,'JobCandidates')">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <input type="hidden" asp-for="Id" />
                  <input type="hidden" asp-for="JobId" />
                  <input type="hidden" asp-for="UserId" />

                  
                  <div class="form-group">
                      <label as-for="FinalAnalysisComment" class="control-label"></label>
                      
                      <textarea asp-for="FinalAnalysisComment" class="form-control" rows="5" >
                      </textarea>
                      <span as-validation-for="FinalAnalysisComment" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                      <input type="submit" value="Save" class="btn btn-primary mt-3" />
                  </div>
              </form>
          </div>
      </div>


      @section Scripts {
          @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
      }
  </body>
</html>