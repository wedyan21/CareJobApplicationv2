@model CareJobApplicationv2.Models.ApplicantQ1Answers

@{
    
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        
        <form asp-action="AddApplicantQ1" method="post" onsubmit="return SubmitQ1AnswerForm(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mt-2 mb-2">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="PersonNameEn" class="control-label"></label>
                        <input asp-for="PersonNameEn" class="form-control" />
                        <span asp-validation-for="PersonNameEn" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="personNameAr" class="control-label"></label>
                        <input asp-for="personNameAr" class="form-control" />
                        <span asp-validation-for="personNameAr" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-2 mb-2">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label asp-for="RelationType" class="control-label"></label>
                        <input asp-for="RelationType" class="form-control" />
                        <span asp-validation-for="RelationType" class="text-danger"></span>
                    </div>
                </div>
                
            
            <div class="col-lg-12 mt-3">
                <div class="form-group">
                    <input type="submit" value="Add new Referee" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
